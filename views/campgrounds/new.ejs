<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form class="validated-form" novalidate action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="invalid-feedback">Title Required</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="invalid-feedback">Location Required!</div>
                </div>
        
                <div class="input-group mb-3">
                 <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)"
                        placeholder="0" name="campground[price]" required>
                    <span class="input-group-text">.99</span>
                    <div class="invalid-feedback">Price Required</div>

                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                    <div class="invalid-feedback">Description Required</div>
                </div>

                <div class="mb-3">
                <label for="">Upload Image(s): </label>
                     <div class="input-group mb-3">
                        <input type="file" class="form-control" id="image"  name="image" for="image" multiple>
                    </div>
                </div>
                <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
                </div>
            </form>

            <footer>
                <a class="btn btn-danger mb-2" href="/campgrounds">Cancel</a>
            </footer>
        </div>
    </div>